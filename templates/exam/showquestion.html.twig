{% extends 'base.html.twig' %}
{% block title %}Show Questions{% endblock %}
 {% block body %}
     <h2 align="center" class="pt-5">Questions</h2>
     {% for message in app.flashes('success') %}
         <div class="alert alert-success">
             {{ message }}
         </div>
     {% endfor %}
     <table class="table">
         <thead class="thead-dark">
         <tr>
             <th>QuestionId</th>
             <th>Question</th>
             <th>Wrong Answer 1</th>
             <th>Wrong Answer 2</th>
             <th>Wrong Answer 3</th>
             <th>Wrong Answer 4</th>
             <th>Correct_Answer</th>
             <th>Action</th>
         </tr>
         </thead>
         {% if question is empty %}
             <tr>
                 <td colspan="8"><div class="d-inline p-2 bg-dark text-white center">No questions to show!!</div></td>
             </tr>
         {% else %}
         {% for questions in question %}
            <tr>
                <td>{{questions.id}}</td>
                <td>{{questions.question}}</td>
                <td>{{questions.wrong1}}</td>
                <td>{{questions.wrong2}}</td>
                <td>{{questions.wrong3}}</td>
                <td>{{questions.wrong4}}</td>
                <td>{{questions.answer}}</td>
                <td><a href="{{ path('app_question_edit',{id:questions.id}) }}">Edit/</a>
                    <a href="{{ path('app_question_delete',{id:questions.id}) }}">Delete</a> </td> 
            </tr>
        {% endfor %}
        {% endif %}
     </table>
 {% endblock %}