{% extends 'base.html.twig' %}
{% block title %}Newexam{% endblock %}
{% block body %}
    <div class="container">
        <div class="row col-12 justify-content-center">
            <h1 >Exam</h1>
        </div>
        <form action="{{ path('app_exam_process') }}" method="post">
            {% for question in question %}
                <div class="row col-12 ">
                    <ul class="list-unstyled">
                        <li>{{ question.id }}.<b>{{ question.question }}</b></li>

                        <ul class="list-unstyled">
                            <li>A.<input type="radio" name="ques[{{ question.id }}]" value="{{ question.wrong1 }}">{{ question.wrong1 }}</li>
                            <li>B.<input type="radio" name="ques[{{ question.id }}]" value="{{ question.wrong2 }}">{{ question.wrong2 }}</li>
                            <li>C.<input type="radio" name="ques[{{ question.id }}]" value="{{ question.wrong3 }}">{{ question.wrong3 }}</li>
                            <li>D.<input type="radio" name="ques[{{ question.id }}]" value="{{ question.wrong4 }}">{{ question.wrong4 }}</li>
                        </ul>
                    </ul>
                </div>

            {% endfor %}
            <div class="justify-content-center pt-3 pb-5" align="center"> <input type="submit" class="bg-dark text-white" name="Submit" value="Submit" /></div>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </form>
    </div>
{% endblock %}