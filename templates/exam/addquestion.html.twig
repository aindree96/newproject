{% extends ('base.html.twig') %}
{% block title %}Add question{% endblock %}
{% block body %}
    <h2 align="center" class="mt-5">Add Questions</h2>
    <div class="container">
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                {% if type == 'error' %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% elseif type == 'success' %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endif %}
            {% endfor %}
        {% endfor %}
    </div>
    <div class="container">
        <div class="card">
            <form action="{{ path('insert_questions') }}" method="post">
                <div class=" p-5">

                    <div class="form-group">
                        <label for="question"><strong> Enter Question </strong></label>

                        <textarea class="form-control" name="question" cols="60" rows="2" id="question" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="wronganswer1"><strong>Enter First Wrong Answer</strong></label>

                        <input  class="form-control"  name="wronganswer1" type="text" id="wronganswer1" size="85" maxlength="85" required>
                    </div>
                    <div class="form-group">
                        <label for="wronganswer2"><strong>Enter Second Wrong Answer</strong></label>

                        <input  class="form-control"  name="wronganswer2" type="text" id="wronganswer2" size="85" maxlength="85" required>
                    </div>
                    <div class="form-group">
                        <label for="wronganswer3"><strong>Enter Third Wrong Answer</strong></label>

                        <input  class="form-control"  name="wronganswer3" type="text" id="wronganswer3" size="85" maxlength="85" required>
                    </div>
                    <div class="form-group">
                        <label for="correctanswer"><strong>Enter Correct Answer </strong></label>

                        <input  class="form-control"   name="correctanswer" type="text" id="correctanswer" size="50" maxlength="50" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>

        </div>
    </div>
{% endblock %}